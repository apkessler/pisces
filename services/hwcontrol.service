[Unit]
Description=Pisces HW Control Service
After=network.target
#StartLimitIntervalSec=0

[Service]
Type=notify
Restart=no
#RestartSec=1
#User=pi
WorkingDirectory=/home/pi/Repositories/pisces/build/
ExecStart=/usr/bin/env python3 /home/pi/Repositories/pisces/bin/hwcontrol_server.py
Environment="PYTHONPATH=/home/pi/Repositories/pisces/build/shared"
#StandardOutput=
#StandardError=inherit

[Install]
WantedBy=multi-user.target
